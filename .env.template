# Required Domain Settings
DOMAIN=example.com
EMAIL=admin@example.com

# Protocol Setting
PROTOCOL=http # Only HTTP is supported in this deployment

# Docker Image Path (GitHub Container Registry)
# Format: ghcr.io/username/repo-name
IMAGE_PATH=ghcr.io/xgpt-private-gpt/tasks-xgpt-works

# MongoDB Settings (optional, defaults shown)
MONGO_USERNAME=admin
MONGO_PASSWORD=securepassword
MONGO_DATABASE=app

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret
JWT_EXPIRES_IN=30d

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your.email@gmail.com
SMTP_PASS=your-16-character-app-password
SMTP_FROM=your.email@gmail.com

# Discord Notifications
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Frontend Configuration
APP_NAME="Task Manager"

# Application Environment
NODE_ENV=production

# GitHub Container Registry Auth (only needed for private repositories)
#GITHUB_TOKEN=your_github_personal_access_token
